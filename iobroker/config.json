  },
  "ports": {
    "8081/tcp": 8081
  },
  "ports_description": {
    "8081/tcp": "ioBroker Admin UI"
  },
  "schema": {
    "IOBROKER_PORT": "int"
  },
  "options": {
    "IOBROKER_PORT": 8081
  },
  "INITIAL_CONFIG": "{\"ConnectionManager_connections\":{\"f69723c3-4fcd-4bd9-a63d-c81864946931\":{\"configVersion\":1,\"clientId\":\"iobroker-52dfac40\",\"id\":\"f69723c3-4fcd-4bd9-a63d-c81864946931\",\"name\":\"homeassistant\",\"encryption\":false,\"type\":\"http\",\"host\":\"core-iobroker.local.hass.io\",\"port\":8081}}}"
