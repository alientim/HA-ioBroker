{
  "name": "ioBroker",
  "version": "latest",  // Diese Zeile bleibt zur Referenz, beeinflusst aber nicht den Docker-Tag.
  "slug": "iobroker",
  "description": "ioBroker als Home Assistant Add-on",
  "arch": ["armhf", "armv7", "amd64", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8081,
  "panel_icon": "mdi:home-automation",
  "panel_admin": true,
  "image": "buanet/iobroker:latest",  // Hier den Tag auf "latest" setzen
  "map": ["config", "share", "ssl", "addons"],
